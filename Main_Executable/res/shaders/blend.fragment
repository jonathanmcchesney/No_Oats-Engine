#version 330 core
// Created By Jonathan McChesney
 
// Inputs
in vec2 TextureCoords;

// Outputs
out vec4 fragmentColour;

// Uniforms
uniform sampler2D basictexture;

// Set the colour vec4 to the texture coordinate value.
void main()
{             
    fragmentColour = texture(basictexture, TextureCoords);
} 